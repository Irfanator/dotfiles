; find icon name : fc-match -a |grep -i Material
; to find icon: xfd -fa MaterialIcons,
; echo "\ueXXX" to print and paste here

;This file has been edited by squash
[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}

[bar/nepu]
monitor = ${env:MONITOR:LVDS-1}
width = 705px
height = 32
offset-x = 30
offset-y = 10
;radius = 12.0
fixed-center = true

background = ${xrdb:background}
foreground = ${xrdb:foreground}

line-size = 1
line-color = ${xrdb:foreground}

padding-left = 4
padding-right = 4

border-size = 1px
border-color = ${xrdb:foreground}

module-margin-left = 1
module-margin-right = 1

font-0 = Bok MonteCarlo:style=Sans:antialias=false:pixelsize=9;1
font-1 = Sazanami Gothic:style=Gothic-Regular:antialias=false:pixelsize=7;0

modules-left = bspwm
modules-center = xwindow
modules-right = memory cpu temperature date

tray-position = right
tray-padding = 0

wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title:0:24:...%
format = <label>

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${xrdb:color1}

ramp-signal-0 = 0
ramp-signal-1 = 1
ramp-signal-2 = 2
ramp-signal-3 = 3
ramp-signal-4 = 4
ramp-signal-foreground = ${xrdb:color1}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = "î€ª "
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${xrdb:color1}

[module/bspwm]
type = internal/bspwm
module-margin-left = 8
module-margin-right = 4
label-focused = %name%
label-focused-background = ${xrdb:color2}
label-focused-foreground = ${xrdb:background}
label-focused-padding = 1

label-occupied = %name%

label-occupied-foreground = ${xrdb:foreground}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${xrdb:color1}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${xrdb:color8}
label-empty-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${xrdb:color4}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${xrdb:color4}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${xrdb:color4}

label = %date% %time%


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
format-prefix = "TEMP "
format-prefix-foreground = ${xrdb:color4}

format = <label>
format-warn = <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${xrdb:color2}

[settings]
screenchange-reload = true
compositing-background = xor
;compositing-background = screen
compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
;pseudo-transparency = true

